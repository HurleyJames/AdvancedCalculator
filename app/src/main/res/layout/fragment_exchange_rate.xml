<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_country"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/white_96">

        <RelativeLayout
            android:id="@+id/rl_country1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_flag1"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/country_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CNY"
                android:textSize="24sp"
                android:layout_toRightOf="@id/img_flag1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp">
                <TextView
                    android:id="@+id/country_money1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textSize="24sp"
                    android:textColor="#FF0000"
                    android:layout_marginBottom="2dp"/>
                <TextView
                    android:id="@+id/country_coin_type1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="人民币"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_height="1dp"
            style="@style/divide.horizontal"/>

        <RelativeLayout
            android:id="@+id/rl_country2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_flag2"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/country_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CNY"
                android:textSize="24sp"
                android:layout_toRightOf="@id/img_flag2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp">
                <TextView
                    android:id="@+id/country_money2"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textSize="24sp"
                    android:textColor="#FF0000"
                    android:layout_marginBottom="2dp"/>
                <TextView
                    android:id="@+id/country_coin_type2"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="人民币"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_height="1dp"
            style="@style/divide.horizontal"/>

        <RelativeLayout
            android:id="@+id/rl_country3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_flag3"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/country_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CNY"
                android:textSize="24sp"
                android:layout_toRightOf="@id/img_flag3"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp">
                <TextView
                    android:id="@+id/country_money3"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textSize="24sp"
                    android:textColor="#FF0000"
                    android:layout_marginBottom="2dp"/>
                <TextView
                    android:id="@+id/country_coin_type3"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="人民币"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_keyboard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_column1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="7"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <View
                android:layout_height="1dp"
                style="@style/divide.horizontal"/>

            <TextView
                android:id="@+id/btn_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="4"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <View
                android:layout_height="1dp"
                style="@style/divide.horizontal"/>

            <TextView
                android:id="@+id/btn_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <View
                android:layout_height="1dp"
                style="@style/divide.horizontal"/>

            <TextView
                android:id="@+id/btn_0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textSize="18sp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <View
            android:id="@+id/divide_vertical1"
            android:layout_width="1dp"
            style="@style/divide.vertical"/>

        <LinearLayout
            android:id="@+id/ll_column2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="8"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <View
                android:layout_height="1dp"
                style="@style/divide.horizontal"/>

            <TextView
                android:id="@+id/btn_5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="5"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <View
                android:layout_height="1dp"
                style="@style/divide.horizontal"/>

            <TextView
                android:id="@+id/btn_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <View
                android:layout_height="1dp"
                style="@style/divide.horizontal"/>

            <TextView
                android:id="@+id/btn_empty"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textSize="18sp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            style="@style/divide.vertical"/>

        <LinearLayout
            android:id="@+id/ll_column3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_9"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="9"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <View
                android:layout_height="1dp"
                style="@style/divide.horizontal"/>

            <TextView
                android:id="@+id/btn_6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="6"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <View
                android:layout_height="1dp"
                style="@style/divide.horizontal"/>

            <TextView
                android:id="@+id/btn_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="3"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <View
                android:layout_height="1dp"
                style="@style/divide.horizontal"/>

            <TextView
                android:id="@+id/btn_point"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="."
                android:textSize="18sp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            style="@style/divide.vertical"/>

        <LinearLayout
            android:id="@+id/ll_column4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_AC"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="AC"
                android:textSize="18sp"
                android:textColor="@color/orange"/>

            <View
                android:layout_height="1dp"
                style="@style/divide.horizontal"/>

            <TextView
                android:id="@+id/btn_del"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>